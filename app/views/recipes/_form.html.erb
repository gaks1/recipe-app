<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>
      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input_group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "input-default" %>
  </div>

  <div class="input_group">
    <%= form.label :preparation_time, style: "display: block" %>
    <%= form.number_field :preparation_time, class: "input-default" %>
  </div>

  <div class="input_group">
    <%= form.label :cooking_time, style: "display: block" %>
    <%= form.number_field :cooking_time, class: "input-default" %>
  </div>

  <div class="input_group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "input-default" %>
  </div>

  <div class="row checkbox">
    <%= form.check_box :public %>
    <%= form.label :public, style: "display: block" %>
  </div>

  <div>
    <%= form.submit class: "btn-success btn-submit" %>
  </div>
<% end %>
